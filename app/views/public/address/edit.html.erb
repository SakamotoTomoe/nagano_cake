<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1>配送先編集</h1>
      <%= form_with model: @address, url: address_path(current_customer.id) do |f| %>
        <table>
          <tr>
            <th>郵便番号（ハイフンなし）</th><td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th>住所</th><td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th>宛名</th><td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th></th><td><%= f.submit '編集内容を保存', class:'btn btn-sm btn-success' %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>