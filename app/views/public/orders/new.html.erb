<h1>注文情報入力</h1>
<%= form_with model: @oder, url: orders_confirm_path , method: :post do |f| %>
  <strong>支払方法</strong><br>
  <%= f.collection_radio_buttons :payment_method, Order.payment_methods_i18n, :first, :last %>
  <strong>お届け先</strong>
  <%= f.radio_button :address %>
  <%= f.label :address, 'ご自身の住所' %>
  <%= current_customer.address %>
  <%= f.radio_button :address %>
  <%= f.label :address, '登録済住所から選択' %>
  <%= f.collection_select :address, Order.all, :postal_code, :address %>
  <%= f.radio_button :address %>
  <%= f.label :address, '新しいお届け先' %>
  郵便番号（ハイフンなし）
  <%= f.text_field :postal_code %><br>
  住所
  <%= f.text_field :address %><br>
  宛名
  <%= f.text_field :name %><br>
  <%= f.submit '確認画面へ進む' %>
<% end %>