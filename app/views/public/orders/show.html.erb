<h1>注文履歴詳細</h1>
<strong>注文情報</strong>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>支払方法</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @order.created_at %></td>
      <td>
        〒<%= @order.postal_code %><br>
        <%= @order.address %>
        <%= @order.name %>
      </td>
      <td><%= @order.payment_method %></td>
      <td><%= @order.status %></td>
    </tr>
  </tbody>
</table>

<strong>請求情報</strong>
<table>
  <thead>
    <tr>
      <th>商品合計</th>
      <th>配送料</th>
      <th>ご請求額</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= number_to_currency(@total , strip_insignificant_zeros: true) %></td>
      <td><%= @order.shipping_cost %></td>
      <td><%= number_to_currency(@order.total_payment , strip_insignificant_zeros: true) %></td>
    </tr>
  </tbody>
</table>

<strong>注文内容</strong>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% @order_details.each do |order_detail| %>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.item.price * 1.10 %></td>
      <td><%= order_detail.item.cart_item.amount %></td>
      <td><%= order_detail.item.price * 1.10 * order.item.cart_item.amount %></td>
    <% end %>
    </tr>
  </tbody>
</table>
