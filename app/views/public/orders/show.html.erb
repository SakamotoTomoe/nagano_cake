<div class="container" style="margin: 30px;">
  <div class="row no-gutters">
    <div class="col-md-8">
      <h1>注文履歴詳細</h1>
    </div>
    <div class="col-md-6" style="padding: 10px;">
      <strong>注文情報</strong>
      <table class="table table-bordered">
          <tr>
            <th class="table-primary">注文日</th><td><%= @order.created_at.strftime("%Y年%m月%d日") %></td>
          </tr>
          <tr>
            <th class="table-primary">配送先</th>
            <td>
              〒<%= @order.postal_code %><br>
              <%= @order.address %>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th class="table-primary">支払方法</th><td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th class="table-primary">ステータス</th><td><%= @order.status_i18n %></td>
          </tr>
      </table>
    </div>
    <div class="col-md-4" style="padding: 10px;">
      <strong>請求情報</strong>
      <table class="table table-bordered">
          <tr>
            <th class="table-primary">商品合計</th><td><%= @total.to_s(:delimited)  %></td>
          </tr>
          <tr>
            <th class="table-primary">配送料</th><td><%= @order.shipping_cost.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th class="table-primary">ご請求額</th><td><%= @order.total_payment.to_s(:delimited) %></td>
          </tr>
      </table>
    </div>
  </div>
  <div class="row no-gutters">
    <div class="col-md-8" style="padding: 10px;">
      <strong>注文内容</strong>
      <table class="table table-bordered">
        <thead class="table-primary">
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= number_with_precision(order_detail.price * 1.10 , strip_insignificant_zeros: true) %></td>
            <td><%= order_detail.amount %></td>
            <td><%= number_with_precision(order_detail.price * 1.10 * order_detail.amount , strip_insignificant_zeros: true) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
