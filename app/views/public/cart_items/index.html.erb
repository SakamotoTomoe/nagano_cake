<div class="container" style="margin: 30px;">
  <div class="row">
    <div class="col-md-8">
      <h1>ショッピングカート</h1>
    </div>
    <div class="col-md-2">
      <%= link_to 'カートを空にする', cart_items_all_destroy_path , method: :delete , class:'btn btn-sm btn-danger' %>
    </div>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead class="table-primary">
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.get_image(100,100) %>
            <strong><%= cart_item.item.name %></strong>
          </td>
          <td><%= number_to_currency(cart_item.item.price * 1.10 , unit: "￥", strip_insignificant_zeros: true) %></td>
          <%= form_with model: cart_item, url: cart_item_path(cart_item.id) , method: :patch do |f| %>
          <td>
            <%= f.select :amount, *[1..9], {include_blank: '個数選択'} %>
            <%= f.submit '変更', class:'btn btn-sm btn-success'%>
          </td>
          <% end %>
          <td><%= number_to_currency(cart_item.item.price * 1.10 * cart_item.amount , unit: "￥", strip_insignificant_zeros: true) %></td>
          <td><%= link_to '削除する', cart_item_path(cart_item.id) , method: :delete , class:'btn btn-sm btn-danger' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-md-2">
      <%= link_to '買い物を続ける', root_path , class:'btn btn-sm btn-primary' %>
    </div>
    <div class="col-md-3">
      <table class="table table-bordered">
          <tr>
            <% @cart_items.each do |cart_item| %>
              <% @total = @total + cart_item.subtotal %>
            <% end %>
            <th class="table-primary">合計金額</th>
            <td><%= number_to_currency(@total , unit: "￥", strip_insignificant_zeros: true) %></td>
          </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10">
      <% if @cart_items.first == nil %>
      <% else %>
        <%= link_to '情報入力に進む', new_order_path , class:'btn btn-sm btn-success' %>
      <% end %>
    </div>
  </div>
</div>
