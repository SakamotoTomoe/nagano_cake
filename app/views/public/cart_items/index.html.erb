<h1>ショッピングカート</h1>
<%= link_to 'カートを空にする', cart_items_all_destroy_path , method: :delete %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= image_tag cart_item.item.get_image(100,100) %><%= cart_item.item.name %></td>
      <td><%= number_to_currency(cart_item.item.price * 1.10 , unit: "￥", strip_insignificant_zeros: true) %></td>
      <%= form_with model: cart_item, url: cart_item_path(cart_item.id) , method: :patch do |f| %>
        <td>
          <%= f.select :amount, [1, 2, 3], {include_blank: '個数選択'} %>
          <%= f.submit '変更' %>
        </td>
      <% end %>
      <td><%= number_to_currency(cart_item.item.price * 1.10 * cart_item.amount , unit: "￥", strip_insignificant_zeros: true) %></td>
      <td><%= link_to '削除する', cart_item_path(cart_item.id) , method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '買い物を続ける', root_path %>

<table>
  <thead>
    <tr>
      <th>合計金額</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @cart_items.each do |cart_item| %>
      <td>
        <% @total = @total + cart_item.subtotal %>
        <%= number_to_currency(@total , unit: "￥", strip_insignificant_zeros: true) %>
      </td>
      <% end %>
    </tr>
  </tbody>
</table>

<%= link_to '情報入力に進む',  new_order_path %>