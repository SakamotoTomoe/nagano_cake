<div class="container" style="margin: 30px;">
  <div class="row no-gutters">
    <div class="col-md-12">
      <h1>商品一覧</h1>
      <div style="display: flex; flex-wrap: wrap;">
      <% @items.each do |item| %>
        <div style="margin: 20px;">
        <%= image_tag item.get_image(200,200) %><br>
        <%= link_to item.name ,  item_path(item.id) , class: 'text-dark' %><br>
        <%= number_to_currency(item.price, unit: "￥", strip_insignificant_zeros: true) %><br>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
