<div class="container" style="margin: 30px;">
  <div class="row no-gutters">
    <div class="col-md-8">
      <h1>注文履歴一覧</h1>
      <table class="table">
        <thead class="table-primary">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime("%Y年%m月%d日%T"), admin_order_path(order.id) %></td>
            <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
            <td><%= order.order_item_amount %></td>
            <td><%= order.status_i18n %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
