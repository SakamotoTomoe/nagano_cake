<div class="container" style="margin: 30px;">
  <div class="row no-gutters">
    <div class="col-md-6">
      <h1><%= @customer.last_name %><%= @customer.first_name %> さんの会員情報編集</h1>
      <%= form_with model: @customer , url: admin_customer_path(@customer.id) do |f| %>
      <table class="table table-light">
        <tr>
          <th>会員ID</th><td><%= f.text_field :id %></td>
        </tr>
        <tr>
          <th>氏名</th><td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th><td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th><td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <th>住所</th><td><%= f.text_field :adress %></td>
        </tr>
        <tr>
          <th>電話番号</th><td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th><td><%= f.text_field :mail %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, '退会', value: true %>
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, '有効', value: false %>
          </td>
        </tr>
        <tr>
          <th></th><td><%= f.submit '変更を保存', class:'btn btn-sm btn-success' %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
